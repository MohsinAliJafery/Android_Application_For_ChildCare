<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/google_maps_image"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login_or_Register">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/child_care_background_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/curved_shape_with_pink_background"
            android:padding="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteX="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/back_floating_button"
                    android:layout_gravity="center"
                    android:clickable="true"
                    app:fabSize="mini"
                    android:src="@drawable/ic_arrow_back_white_24dp"
                    />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:text="Registration"
                    android:textColor="@color/noColor"
                    android:textSize="20sp" />

            </LinearLayout>

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:layout_marginTop="30dp"
                android:hint="Name"
                android:background="@drawable/curved_shape_with_white_background_for_edit_text"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:inputType="textEmailAddress"
                android:layout_marginTop="19dp"
                android:background="@drawable/curved_shape_with_white_background_for_edit_text"
                android:hint="Your email"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:inputType="text"
                android:layout_marginTop="19dp"
                android:background="@drawable/curved_shape_with_white_background_for_edit_text"
                android:hint="Password"
                android:textSize="17dp" />


            <Button
                android:id="@+id/register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="@color/colorLessBlack"
                android:text="REGISTER"
                android:textColor="#ffff"
                android:textSize="17dp" />

            <androidx.core.widget.ContentLoadingProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                style="?android:attr/progressBarStyle"
                android:layout_height="wrap_content"
                android:indeterminateTint="@color/colorLessBlack"

                />


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

