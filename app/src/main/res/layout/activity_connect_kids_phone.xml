<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"

    android:background="@drawable/google_maps_image"
    android:layout_height="match_parent"
    tools:context=".ConnectKidsPhone">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:background="@drawable/child_care_background_image">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/curved_shape_with_shadow_white_background"
        android:padding="30dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Connect your kids's device to see his/her location on the map"
            android:textColor="@color/colorBlack"
            android:layout_marginBottom="20dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:id="@+id/connect_kids_phone"
            android:clickable="true"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_smartphone_pink_24dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_gravity="center_horizontal"
                android:padding="5dp"
                android:layout_height="wrap_content"
                android:text="Connect a kids phone"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:clickable="true"
            android:id="@+id/connect_kids_watch"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_watch_pink_24dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_gravity="center_horizontal"
                android:padding="5dp"
                android:layout_height="wrap_content"
                android:text="Connect a GPS-Watch"/>

        </LinearLayout>

    </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>